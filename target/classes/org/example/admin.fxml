<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.cell.TextFieldTableCell?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="601.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.AdminController">
    <children>
        <MenuBar prefHeight="29.0" prefWidth="600.0">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#saveOrder" text="Save Order" />
                        <MenuItem mnemonicParsing="false" onAction="#loadOrder" text="Load Order" />
                    </items>
                </Menu>
            <Menu mnemonicParsing="false" text="Vis...">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#showComponents" text="Vis Alle Komponenter" />
                  <MenuItem mnemonicParsing="false" onAction="#showOrders" text="Vis Alle Ordrer" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Registrer komponent">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#createCabinet" text="Kabinett" />
                  <MenuItem mnemonicParsing="false" onAction="#createCPU" text="CPU" />
                  <MenuItem mnemonicParsing="false" onAction="#createFan" text="Vifte" />
                  <MenuItem mnemonicParsing="false" onAction="#createGraphicCard" text="Grafikkort" />
                  <MenuItem mnemonicParsing="false" onAction="#createMotherboard" text="Hovedkort" />
                  <MenuItem mnemonicParsing="false" onAction="#createPowerSupply" text="Strømforsyning" />
                  <MenuItem mnemonicParsing="false" onAction="#createStorage" text="Lagring" />
              </items>
            </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#showAbout" text="About" />
                        <MenuItem mnemonicParsing="false" onAction="#changeToUser" text="User View" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
      <TextArea fx:id="txtOutput" editable="false" layoutX="100.0" layoutY="86.0" prefHeight="350.0" prefWidth="400.0" wrapText="true" />
      <Label fx:id="lblOutput" layoutX="276.0" layoutY="52.0" text="L A B E L" />

      <TableView fx:id="tableView" editable="true" layoutY="86.0" prefHeight="399.0" prefWidth="601.0">
        <columns>

            <TableColumn fx:id="tvName" prefWidth="73.0" text="Name" >
                <cellValueFactory>
                    <PropertyValueFactory property="name" />
                </cellValueFactory>
                <cellFactory>
                    <TextFieldTableCell fx:factory="forTableColumn" />
                </cellFactory>
            </TableColumn>

            <TableColumn fx:id="tvManufacturer" prefWidth="100.0" text="Manufacturer" >
                <cellValueFactory>
                    <PropertyValueFactory property="manufacturer" />
                </cellValueFactory>
                <cellFactory>
                    <TextFieldTableCell fx:factory="forTableColumn" />
                </cellFactory>
            </TableColumn>

            <TableColumn fx:id="tvPrice" prefWidth="87.0" text="Price" >
                <cellValueFactory>
                    <PropertyValueFactory property="price" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="tvHøyde" prefWidth="77.0" text="Høyde" >
                <cellValueFactory>
                    <PropertyValueFactory property="height" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="tvBredde" prefWidth="97.0" text="Bredde" >
                <cellValueFactory>
                    <PropertyValueFactory property="width" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="tvDybde" prefWidth="74.0" text="Dybde" >
                <cellValueFactory>
                    <PropertyValueFactory property="depth" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="tvVekt" prefWidth="93.0" text="Vekt" >
                <cellValueFactory>
                    <PropertyValueFactory property="weight" />
                </cellValueFactory>
            </TableColumn>

        </columns>
      </TableView>
    </children>
</AnchorPane>
